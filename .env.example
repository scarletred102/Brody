# Brody Environment Configuration
# Copy this file to .env and fill in your API keys

# API Keys
# Prefer OpenRouter to access multiple providers via one API
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
ONLY_FREE_MODELS=true
# Comma-separated list of allowed free models (examples; verify availability in OpenRouter):
FREE_MODEL_ALLOWLIST=meta-llama/llama-3.1-8b-instruct:free,mistralai/mistral-7b-instruct:free,nousresearch/nous-hermes-2-mistral-7b:free

# Optional direct provider keys (not required when using OpenRouter)
OPENAI_API_KEY=your_openai_key_here
GEMINI_API_KEY=your_gemini_key_here

# Email Integration (Gmail API)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Microsoft Integration
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Backend Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration (SQLite fallback for development)
DATABASE_URL=sqlite:///./brody.db
# DATABASE_URL=postgresql://user:password@localhost/brody

# Authentication & Security
SECRET_KEY=your-secret-key-here-generate-with-secrets.token_urlsafe(32)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Default models (free-only examples)
DEFAULT_MODEL=meta-llama/llama-3.1-8b-instruct:free
FALLBACK_MODEL=mistralai/mistral-7b-instruct:free
TASK_MODEL=meta-llama/llama-3.1-8b-instruct:free
SUMMARY_MODEL=mistralai/mistral-7b-instruct:free

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
